<div class="container">
   <div class="row">
      <div class="col s12 m8 l8 offset-m2 offset-l2 ">
         <div class="center">
            <h4>connexion</h4>
         </div>
         {% trans_default_domain 'FOSUserBundle' %}

         {% if error %}
         <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      <form action="{{ path("fos_user_security_check") }}" method="post">
         {% if csrf_token %}
         <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
         {% endif %}

         <label for="username">{{ 'security.login.username'|trans }}</label>
         <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

         <label for="password">{{ 'security.login.password'|trans }}</label>
         <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />

         <div class="row right-align">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
         </div>
         <div class="row center">
            <a class="waves-effect waves-light btn cyan" type="submit" value="{{ 'security.login.trans'|trans }}"><i class="material-icons right">send</i>envoyer<a/>

            </div>

         </form>

      </div>
   </div>
</div>
