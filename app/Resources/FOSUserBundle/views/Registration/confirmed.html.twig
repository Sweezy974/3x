{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
<div class="row center">
    <img width="100" src="{{ asset ('images/3x-smile.png') }}" style="padding-top:10px;">
    <p><strong>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</strong></p>
</div>
</div>
<div class="row">
